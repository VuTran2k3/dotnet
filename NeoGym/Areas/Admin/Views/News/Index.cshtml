@model IEnumerable<NeoGym.Models.News>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div id="page-wrapper">
    <h2>Quản lí tin tức</h2>

    <button class="btn-default align-self-end">
        @Html.ActionLink("Tạo tin tức mới", "Create", "News")
    </button>
    <table class="table">
        <tr>
            <th>
                Tiêu đề
            </th>
            <th>
                Chi tiết
            </th>
            <th>
                meta
            </th>
            <th>
                hiển thị
            </th>
            <th>
                thứ tự
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.meta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.hide)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.order)
                </td>
                <td>
                    <button class="btn-outline-success">@Html.ActionLink("Edit", "Edit", new { id = item.Id })</button>
                    <button class="btn-outline-success">@Html.ActionLink("Details", "Details", new { id = item.Id })</button>
                    <button class="btn-outline-success">@Html.ActionLink("Delete", "Delete", new { id = item.Id })</button>
                </td>
            </tr>
        }

    </table>
</div>