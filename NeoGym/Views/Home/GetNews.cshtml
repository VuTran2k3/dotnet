@model IEnumerable<NeoGym.Models.News>


<div class="carousel-inner">
    @foreach (var i in Model)
    {
        if (i.order >= 5) { break; }
        <div class="carousel-item  @(i.order == 1 ? "active" : "")">
            <div class="container">
                <div class="col-lg-10 col-md-11 mx-auto">
                    <div class="detail-box">
                        <div>
                            <h2>@i.title</h2>
                            <p>
                                @i.description
                            </p>
                            <div class="">
                                <a href="/Home/Contact">
                                    Liên hệ với chúng tôi
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<ol class="carousel-indicators">
    @foreach (var i in Model)
    {
        <li data-target="#carouselExampleIndicators" data-slide-to="@i.order-1" class="active"></li>
    }
</ol>

